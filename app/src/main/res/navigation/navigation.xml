<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/exploreFragment">
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.emami.android.comicworld.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.emami.android.comicworld.ui.explore.ExploreFragment"
        android:label="fragment_explore"
        tools:layout="@layout/fragment_explore">
        <action
            android:id="@+id/action_exploreFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_exploreFragment_to_pagerFragment"
            app:destination="@id/pagerFragment" />
    </fragment>
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.emami.android.comicworld.ui.library.LibraryFragment"
        android:label="fragment_library"
        tools:layout="@layout/fragment_library" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.emami.android.comicworld.ui.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="comic"
            app:argType="com.emami.android.comicworld.data.NetworkComic" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.emami.android.comicworld.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/chapterFragment"
        android:name="com.emami.android.comicworld.ui.chapter.ChapterFragment"
        android:label="fragment_chapter"
        tools:layout="@layout/fragment_chapter" />
    <fragment
        android:id="@+id/pagerFragment"
        android:name="com.emami.android.comicworld.ui.PagerFragment"
        android:label="fragment_pager"
        tools:layout="@layout/fragment_pager" >
        <argument
            android:name="comic"
            app:argType="com.emami.android.comicworld.data.NetworkComic" />
    </fragment>
</navigation>