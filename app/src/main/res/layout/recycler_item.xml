<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="comicDTO"
            type="com.emami.android.comicworld.data.ComicPreview" />
    </data>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:id="@+id/comicContainer"
    android:padding="8dp"
    android:layout_height="200dp"
    xmlns:tools="http://schemas.android.com/tools">
<com.github.siyamed.shapeimageview.RoundedImageView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="top|center_horizontal"
    tools:src="@drawable/icon_search"
    android:id="@+id/comicImageView"
    app:siRadius="20dp"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.85"
    app:bannerSrc="@{comicDTO.imgSource}" />
    <TextView
        android:layout_gravity="bottom|center_horizontal"
        android:textSize="18sp"
        android:id="@+id/comicNameView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:text="@{comicDTO.name}"
        android:layout_marginBottom="8dp"
        tools:text="Batman who Laughs"/>
</LinearLayout>
</layout>